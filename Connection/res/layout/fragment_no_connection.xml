<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/color_overlay_black"
    android:id="@+id/fragment_connection_layout_dimming">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:padding="@dimen/window_pading">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/connection_textview_message"
            android:id="@+id/fragment_connection_server_textview_message"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fragment_connection_server_textview_message"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="20dp"
            android:gravity="center">

            <Button
                style="@style/style_button_dialog_alter"
                android:layout_width="@dimen/widget_width_small_big"
                android:layout_height="wrap_content"
                android:text="@string/connection_button_cancel"
                android:id="@+id/fragment_connection_button_cancel"
                android:layout_below="@+id/fragment_connection_edittext_code"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="20dp" />

            <Button
                android:layout_width="@dimen/widget_width_small_big"
                android:layout_height="wrap_content"
                android:text="@string/connection_button_confirm"
                android:id="@+id/fragment_connection_button_confirm"
                android:layout_below="@+id/fragment_connection_edittext_code"
                android:layout_centerHorizontal="true"
                style="@style/style_button_dialog" />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>