<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_connection_server_layout_dimming"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/color_mat"
    android:padding="10dp" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/color_white"
        android:padding="@dimen/window_pading" 
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/connection_server_textview_message"
            android:id="@+id/fragment_connection_server_textview_message"
            android:gravity="center" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center">

            <Button
                android:id="@+id/fragment_connection_server_button_retry"
                style="@style/style_button_dialog_positive"
                android:layout_width="@dimen/widget_width_small_big"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fragment_connection_edittext_code"
                android:layout_centerHorizontal="true"
                android:text="@string/connection_server_button_retry" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>