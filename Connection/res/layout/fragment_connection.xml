<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_connection_layout_dimming"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/color_mat"
    android:gravity="center"
    android:padding="10dp" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/color_white"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp" >

        <TextView
            android:id="@+id/fragment_connection_server_textview_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/connection_textview_message"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="vertical" >

            <Button
                android:id="@+id/fragment_connection_button_confirm"
                style="@style/style_button_dialog_positive"
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:text="@string/connection_button_confirm" />

            <Button
                android:id="@+id/fragment_connection_button_cancel"
                style="@style/style_button_dialog_normal"
                android:layout_width="120dp"
                android:layout_height="60dp"  
                android:layout_marginTop="10dp"
                android:text="@string/connection_button_cancel" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>