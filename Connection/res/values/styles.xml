<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
   
    <style name="AppBaseTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">#673AB7</item>
        <item name="colorPrimaryDark">#512DA8</item>
        <item name="colorAccent">#FF4081</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    
    <style name="style_button_dialog" parent="@android:style/Widget.Button">
    	<item name="android:background">@drawable/drawable_button_dialog</item>
        <item name="android:width">@dimen/widget_width_medial</item>
        <item name="android:height">@dimen/widget_height</item>
        <item name="android:textColor">@color/color_white</item>    
    </style>
    
    <style name="style_button_dialog_alter" parent="@android:style/Widget.Button">
    	<item name="android:background">@drawable/drawable_button_dialog_alter</item>
        <item name="android:width">@dimen/widget_width_medial</item>
        <item name="android:height">@dimen/widget_height</item>    
        <item name="android:textColor">@color/color_white</item>
    </style>
    
    <style name="style_edittext_dialog" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/drawable_edittext</item>
        <item name="android:textColorHint">@color/color_gray_light</item>
        <item name="android:padding">@dimen/widget_edittext_padding</item>
        <item name="android:width">@dimen/widget_width_long</item>
        <item name="android:height">@dimen/widget_height</item>

    </style>
    
    

</resources>
